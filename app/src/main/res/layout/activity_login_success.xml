<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginSuccessActivity">


    <Button
        android:id="@+id/btn_back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonPurple"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp12"
        android:text="ไปหน้าล็อกอิน"
        />
    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="background"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_correct"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp12"
        android:fitsSystemWindows="true"/>

    <TextView
        android:id="@+id/tv_show_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลงทะเบียนสำเร็จแล้ว"
        android:layout_above="@+id/btn_back_to_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp20"
        android:textSize="@dimen/textSize"
        android:textColor="@color/colorGreen"
        />
    <TextView
        android:id="@+id/tv_show_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        />

</RelativeLayout>