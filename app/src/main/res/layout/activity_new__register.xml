<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.co.todsphol.add.projectone.fragment.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_register"
                style="@style/ButtonGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_license_plate"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/dp20"
                android:text="Register" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/btn_register"
                android:layout_alignStart="@+id/btn_register"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="24dp"
                android:text="Name"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/edt_name"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_register"
                android:layout_alignRight="@+id/btn_register"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/dp12"
                android:layout_toEndOf="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_name"
                android:hint="Your Name" />

            <TextView
                android:id="@+id/tv_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="35dp"
                android:text="Surname"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/edt_surname"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_register"
                android:layout_alignLeft="@+id/edt_name"
                android:layout_alignRight="@+id/btn_register"
                android:layout_alignStart="@+id/edt_name"
                android:layout_below="@+id/edt_name"
                android:layout_toEndOf="@+id/tv_surname"
                android:layout_toRightOf="@+id/tv_surname"
                android:hint="Your Surname" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_surname"
                android:layout_alignStart="@+id/tv_surname"
                android:layout_below="@+id/tv_surname"
                android:layout_marginTop="30dp"
                android:text="Age"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize"

                />

            <EditText
                android:id="@+id/edt_age"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_register"
                android:layout_alignLeft="@+id/edt_surname"
                android:layout_alignRight="@+id/btn_register"
                android:layout_alignStart="@+id/edt_surname"
                android:layout_below="@+id/edt_surname"
                android:layout_toEndOf="@+id/tv_age"
                android:layout_toRightOf="@+id/tv_age"
                android:hint="Your Age" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_age"
                android:layout_alignStart="@+id/tv_age"
                android:layout_below="@+id/tv_age"
                android:layout_marginTop="30dp"
                android:text="Brand"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/edt_brand"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edt_age"
                android:layout_alignLeft="@+id/edt_age"
                android:layout_alignRight="@+id/edt_age"
                android:layout_alignStart="@+id/edt_age"
                android:layout_below="@+id/edt_age"
                android:layout_toEndOf="@+id/tv_brand"
                android:layout_toRightOf="@+id/tv_brand"
                android:hint="Your Brand" />

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_brand"
                android:layout_alignStart="@+id/tv_brand"
                android:layout_below="@+id/tv_brand"
                android:layout_marginTop="33dp"
                android:text="Color"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/edt_color"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edt_brand"
                android:layout_alignLeft="@+id/edt_brand"
                android:layout_alignRight="@+id/edt_brand"
                android:layout_alignStart="@+id/edt_brand"
                android:layout_below="@+id/edt_brand"
                android:layout_toEndOf="@+id/tv_color"
                android:layout_toRightOf="@+id/tv_color"
                android:hint="Your Color" />

            <TextView
                android:id="@+id/tv_license_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_color"
                android:layout_alignStart="@+id/tv_color"
                android:layout_below="@+id/tv_color"
                android:layout_marginTop="30dp"
                android:text="License Plate"
                android:textColor="@color/colorBlueGray"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/edt_license_plate"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edt_color"
                android:layout_alignLeft="@+id/edt_color"
                android:layout_alignRight="@+id/edt_color"
                android:layout_alignStart="@+id/edt_color"
                android:layout_below="@+id/edt_color"
                android:layout_toEndOf="@id/tv_license_plate"
                android:layout_toRightOf="@+id/tv_license_plate"
                android:hint="Your License Plate" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>