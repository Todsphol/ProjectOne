<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:contentPadding="@dimen/dp8"
    app:cardCornerRadius="6dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_show_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:text="Latitude"
            android:textColor="@color/colorBlueGray"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_show_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_show_latitude"
            android:layout_alignStart="@+id/tv_show_latitude"
            android:layout_below="@+id/tv_show_latitude"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp12"
            android:text="Longitude"
            android:textColor="@color/colorBlueGray"
            android:textSize="@dimen/textSize" />
        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123.012301"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tv_show_latitude"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            />
        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="232.123123"
            android:layout_alignRight="@+id/tv_latitude"
            android:layout_alignEnd="@+id/tv_latitude"
            android:layout_alignBottom="@+id/tv_show_longitude"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>